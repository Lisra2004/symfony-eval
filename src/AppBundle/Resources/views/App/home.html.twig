{% extends 'AppBundle::base.html.twig' %}

{% block content %}
<div class="jumbotron">
    <div class="container">
        <h1>SciPub</h1>
        <p>La nouvelle plate-forme de publication pour scientiques !</p>
        <p>
            <!-- Lien vers la page publier -->

            <a class="btn btn-lg btn-primary" href="#" role="button">Publier &raquo;</a>
        </p>
    </div>
</div>

<div class="container">

    {% for publication in publication_list %}
    <div class="publication-thumb">

        <h2>{{ publication.title }}</h2>
        <p>
            Publié par <strong><a href="">{{ publication.author }}</a> </strong>,
            le <em>{{ publication.publishedAt | date('d/m/Y') }}</em>.
        </p>
        <p>
            {{ publication.content }}
        </p>
        <p>
            <!-- Lien vers le détail de la publication -->
            <a href="#"
               class="btn btn-sm btn-default">
                Lire la publication
            </a>
        </p>

    </div>
    {% endfor %}
</div>
{% endblock %}
